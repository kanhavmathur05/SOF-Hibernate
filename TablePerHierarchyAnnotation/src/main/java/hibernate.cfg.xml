<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernatedb</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Root@1234</property>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="hbm2ddl.auto">create</property>

		<property name="hibernate.show_sql">true</property>


		<mapping class="com.tableperhierarchyannotation.Employee" />
		<mapping class="com.tableperhierarchyannotation.Regular_Employee" />
		<mapping class="com.tableperhierarchyannotation.Contract_Employee" />
	</session-factory>
</hibernate-configuration>